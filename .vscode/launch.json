    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django debug",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\manage.py",
            "args": [
                "runserver",
                "--noreload",
                "--nothreading"
            ],
            "django": true,
        },
        {
            "name": "debug web",
            "type": "chrome",
            "request": "launch",
            "url": "http://127.0.0.1:8000/article/",
            "runtimeExecutable": "C:\\Program Files (x86)\\Google\\Chrome\\Application\\chrome.exe",
            "sourceMaps": true,
            "webRoot": "${workspaceFolder}",
        }
    ]
}